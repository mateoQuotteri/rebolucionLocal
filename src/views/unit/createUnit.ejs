<!DOCTYPE html>
<html lang="en">
<head>
    <%-include ("../partials/head") %>
    <link rel="stylesheet" href="/styles/editUserProfile.css">

    <!--<link rel="stylesheet" href="/styles/register.css">-->
</head>
<body class="background-blue">
    <div class="loading" id="loading">
        <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
    </div>
<main class="hidden" id="main">
    <section class="big-container bg-color-blue-dark">
        

        <div class="false-box background-light-color-box-from-behind">
        

        <form action="/unit/create" class="form background-light-color" method="POST"id="formulario" 
        enctype="">

        <h1 class="orange">Â¡Crea Unidades!</h1>

        <h6 class="white">Modulos existentes:</h6>
        <% modules.forEach(module => {%>
            <p class="white"><%= module.id %> - <%= module.title %> </p>

            <% }); %>



        <label class="white" for="id_modulo">Modulo de la unidad:</label>

        <input type="number" required class="login-input" 
        placeholder="Modulo numero..."  id="id_modulo" name="id_modulo"
        value="<%= locals.old && old.id_modulo %>">
    
        <label class="white" for="title">Titulo de la unidad:</label>


        <input type="text" required class="login-input" 
        placeholder="Titulo de la unidad"  id="title" name="title"
        value="<%= locals.old && old.title %>">
       

            <label class="white" for="description">Descripcion de la unidad:</label>

        <input type="text" required class="login-input" 
        placeholder="Descripcion de la unidad"  id="description" name="description"
        value="<%= locals.old && old.description %>">
        
            <label class="white" for="video">Video de la unidad:</label>

        <input type="text" required class="login-input" 
        placeholder="Video"  id="video" name="video" 
        value="<%= locals.old && old.video %>">
        <% if (locals.errors && errors.video) { %>
            <div class="error-container background-button-error">
                <p class="error orange">
                    <%= errors.video.msg %>
                </p>
            </div>
            <% } %>
            <% if (locals.errors && errors.description) { %>
                <div class="error-container background-button-error">
                    <p class="error orange">
                        <%= errors.description.msg %>
                    </p>
                </div>
                <% } %>
                <% if (locals.errors && errors.title) { %>
                    <div class="error-container background-button-error">
                        <p class="error orange">
                            <%= errors.title.msg %>
                        </p>
                    </div>
                    <% } %>


                    <% if (locals.errors && errors.id_modulo) { %>
                        <div class="error-container background-button-error">
                            <p class="error orange">
                                <%= errors.id_modulo.msg %>

                            </p>
                        </div>
                        <% } %>
            
            <div class="btn-container">
                <button  class="button-from-register bg-color-blue-dark  bg-color-or"type="submit">
                    Crear</button>
                    </div>
        </form>
        </div>
    </section>
</main>
</body>
<script src="/js/loadingWithHeader.js"></script>

</html>